{
	"name": "voice-comments",
	"displayName": "Voice Comments",
	"description": "Helps write comments with voice",
	"version": "0.1.1",
  	"publisher": "4a1c0",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"icon": "ico/voice-comments.png",
	"activationEvents": [
		"onCommand:extension.iVoiceComment",
		"onCommand:extension.voiceComment",
		"onCommand:extension.iComment",
		"onCommand:extension.comment"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.iVoiceComment",
				"title": "Inline Voice Comment"
			},
			{
				"command": "extension.voiceComment",
				"title": "Voice Comment"
			},
			{
				"command": "extension.iComment",
				"title": "Inline Comment"
			},
			{
				"command": "extension.comment",
				"title": "Comment"
			}
		]
	},
	"configuration": {
        "type": "object",
        "title": "Test configuration",
        "properties": {
                "test.usingUI": {
                        "type": "boolean",
                        "default": false,
                        "markdownDescription": "**Some bold text**\nYes or no?"
                },
                "test.text": {
                        "type": ["string", "null"],
                        "default": null,
                        "description": "You can't edit me now!"
                }
        }
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/4a1c0/voice-comments"
	  },
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
